<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="viewModel"
            type="com.dh.test.zzapkaotalk.ui.chat.ChatViewModel"
            />
        <variable
            name="position"
            type="Integer"
            />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        tools:background="@color/purple_200"
        >

        <Space
            android:id="@+id/startLine"
            android:layout_width="1dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            />

        <FrameLayout
            android:id="@+id/messageContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/background_round_rect_orange"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintWidth_max="wrap"
            app:layout_constraintStart_toEndOf="@id/startLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <ImageView
                android:id="@+id/messageImageView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:setImgSrc="@{viewModel.chatState.get(position).message}"
                tools:src="@drawable/ic_baseline_person_24"
                />
        </FrameLayout>

        <TextView
            android:id="@+id/dateTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            tools:text="오후 2:07"
            app:timeText="@{viewModel.chatState.get(position).dateTime}"
            app:layout_constraintBottom_toBottomOf="@id/messageContainer"
            app:layout_constraintEnd_toStartOf="@id/messageContainer"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
